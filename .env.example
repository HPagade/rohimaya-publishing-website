# PhoenixForge AI - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/phoenixforge"
DATABASE_POOL_SIZE=10

# ============================================
# REDIS (Caching & Queues)
# ============================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=

# ============================================
# AI APIS
# ============================================

# OpenAI (GPT-4, DALL-E 3)
OPENAI_API_KEY="sk-..."
OPENAI_ORG_ID=

# Anthropic Claude
ANTHROPIC_API_KEY="sk-ant-..."

# Replicate (Stable Diffusion)
REPLICATE_API_TOKEN="r8_..."

# Runway ML (Video Generation)
RUNWAY_API_KEY="..."

# ElevenLabs (Voice Synthesis)
ELEVENLABS_API_KEY="..."

# ============================================
# AWS (File Storage)
# ============================================
AWS_ACCESS_KEY_ID="AKIA..."
AWS_SECRET_ACCESS_KEY="..."
AWS_REGION="us-east-1"
AWS_S3_BUCKET="phoenixforge-files"
AWS_CLOUDFRONT_URL="https://cdn.phoenixforge.ai"

# ============================================
# AUTHENTICATION
# ============================================
NEXTAUTH_SECRET="your-secret-key-here-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth
GOOGLE_CLIENT_ID="..."
GOOGLE_CLIENT_SECRET="..."

# GitHub OAuth
GITHUB_ID="..."
GITHUB_SECRET="..."

# ============================================
# STRIPE (Payments)
# ============================================
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Price IDs
STRIPE_PRICE_SPARK="price_..."
STRIPE_PRICE_BLAZE="price_..."
STRIPE_PRICE_INFERNO="price_..."

# ============================================
# EMAIL (Resend)
# ============================================
RESEND_API_KEY="re_..."
FROM_EMAIL="noreply@phoenixforge.ai"

# ============================================
# ANALYTICS
# ============================================
GOOGLE_ANALYTICS_ID="G-..."
MIXPANEL_TOKEN="..."

# ============================================
# ERROR TRACKING
# ============================================
SENTRY_DSN="https://...@sentry.io/..."

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_COVERS=true
ENABLE_IMAGES=true
ENABLE_VIDEOS=false
ENABLE_FORMAT=true
ENABLE_API=false

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW=3600000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# OPTIONAL
# ============================================

# Slack (Notifications)
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."

# Discord (Community)
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/..."

# Cloudflare (CDN)
CLOUDFLARE_ACCOUNT_ID="..."
CLOUDFLARE_API_TOKEN="..."

# Development
DEBUG=false
LOG_LEVEL=info
